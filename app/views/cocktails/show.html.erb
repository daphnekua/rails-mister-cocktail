<%= link_to '<< View all cocktails', cocktails_path, class: "my-3" %>

<h2 class="my-3"><%= @cocktail.name %></h2>

<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to 'ðŸ—‘', dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add ingredient and dose", class: "btn btn-primary" %>
<% end %></br>

<h3 class="my-3">What people are saying</h3>

<ul>
  <% @cocktail.reviews.each do |review| %>
    <li> <%= review.content %> - <%= review.name %></li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :name %>
  <%= f.input :content %>
  <%= f.submit "Share your thoughts", class: "btn btn-primary" %>
<% end %></br>
